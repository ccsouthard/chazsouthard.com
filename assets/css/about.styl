@import '_settings'
@import '_animations'
@import 'jeet'

.about-page
  .hero-boxes
    clearfix()
    margin-top: 35px
    margin-bottom: 55px
    text-align: center
  
  .hero-container
    text-align: initial
    display: inline-block
    
  .hero-box
    width: 45%
    min-height: 715px
    background-color: #F6F6F6
    border: 1px solid #979797
    box-sizing: border-box
    padding: 31px 56px
    position: relative
    float: left
    &.left
      margin-right: 10%

    +between(981px, 1100px)
      width: 47.5%
      &.left
        margin-right: 5%

    +below(980px)
      width: 100%
      min-height: auto
      &.left
        margin-right: 0
        margin-bottom: 55px

    +between(861px, 1100px)
      padding: 25px 45px
    +between(546px, 860px)
      padding: 25px 30px
    +below(545px)
      padding: 25px 20px

  .artist-statement
    letter-spacing: 0.5px
    h2
      color: #3B3D44
      font-family: raleway
      text-transform: uppercase
      font-size: 1em
      text-align: center
      margin-bottom: 2em
    p
      color: #A3A6AC
      font-size: 1.3em
      line-height: 32px
  
  .profile
    .profile-img
      border: 1px solid #979797
      padding: 30px
      background-color: #FFF
      +below(980px)
        max-width: 400px
      margin: 0 auto
      img
        display: block
        width: 100%
    nav
      margin-top: 30px
      display: inline-block
      width: auto 
      align(horizontal)
      position: relative
      ul
        margin: 0.5em 0 1.5em
      b
        color: #3B3D44
        font-family: raleway
        text-transform: uppercase
        letter-spacing: 1px
        margin: 1em 0 0.5em
      a
        color: #0e8eb5
  
  article
    center(980px)
    //width: 75%
    //margin: 0 auto 75px
    
    h2
      color: #A3A6AC
      font-family: raleway
      text-transform: uppercase
      font-size: 2.5em
      font-weight: 300
      text-align: center
  
    img
      max-width: 500px
      width: 100%
      display: block
      margin: 1em auto
  
  .process
    p
      color: #A3A6AC
      font-size: 1.3em
      max-width: 750px
      text-align: center
      margin: 0 auto

  .quote
    background-color: #000
    color: #FFF
    text-align: center
    .content
      padding: 10px
    h2
      font-family: raleway
      text-transform: uppercase
      font-size: 2em
      font-weight: normal
      letter-spacing: 1.5px
    p
      font-size: 1.5em
      letter-spacing: 0.5px
      max-width: 850px
      margin: 1em auto
  
  .quote-img
    background-image: url('../img/about/quote.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center 80%
    height: 200px