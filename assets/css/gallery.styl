@import '_settings'
@import '_animations'
@import 'jeet'

.gallery-page
  .gallery
    h2
      font-size: 2em
      color: font-light-color
      text-transform: uppercase
      letter-spacing: 2px

    section
      clearfix()

  .artwork
    +above(1281px)
      col(1/5, cycle: 5)
    +between(981px, 1280px)
      col(1/4, cycle: 4)
    +between(861px, 980px)
      col(1/3, cycle: 3)
    +between(546px, 860px)
      col(1/2, cycle: 2)

    margin-bottom: 30px
    border: 1px solid #E5E5E5
    box-sizing: border-box
    position: relative

    &.date
      font-weight: bold
      font-size: 2em
      color: font-light-color
      .date-container
        align(both)

    img
      display: block
      width: 100%
      height: 100%
      background: white url('../img/gallery/loading.gif') no-repeat center

    figcaption
      absolute: right bottom left
      height: 75%
      opacity: 0
      text-align: center
      color: #FFF
      background-color: rgba(0,0,0,0.75)
      transition: height 0.25s linear, opacity 0.25s linear 0.125s
      
      .caption-container
        display: table
        height: 100%
        margin: 0 auto
      .caption-content
        display: table-cell
        vertical-align: middle
        padding: 0 10px
      
      .title
        font-weight: bold
        letter-spacing: 2px
        font-size: 1.25em
        .medium
          letter-spacing: 1px

    &:hover figcaption
      transition: height 0.25s linear, opacity 0.25s linear
      height: 100%
      opacity: 1

.gallery-modal
  display: none

body.modal
  overflow: hidden

  .gallery-modal
    display: block
    fixed: top header-height left bottom right
    background-color: rgba(0,0,0,0.9)
    z-index: 400
    .modal-inner
      size: 100%
    .close
      absolute: top 20px right 20px
      a
        display: block
        size: 50px
        background: url('../img/icons/times-circle.svg') no-repeat
        background-size: 100%
    .previous
      absolute: top 50% left 20px
      margin-top: -30px
      a
        display: block
        size: 30px 60px
        background: url('../img/icons/previous.svg') no-repeat
        background-size: 100%
    .next
      absolute: top 50% right 20px
      margin-top: -30px
      a
        display: block
        size: 30px 60px
        background: url('../img/icons/next.svg') no-repeat
        background-size: 100%
    .content
      size: 100% 60%
      margin: 50px auto
      img
        height: 100%
        display: block
        margin: 0 auto
        border: 20px solid #E5E5E5
        box-sizing: border-box
        background: white url('../img/gallery/loading.gif') no-repeat center
    .caption
      text-align: center
      font-family: raleway
      letter-spacing: 2px
      color: #FFF
      p
        margin: 2px 0
        span
          margin-right: 10px
